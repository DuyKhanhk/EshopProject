@model Eshop.Models.Invoice

@{
    ViewData["Title"] = "Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int total=ViewBag.total;
}

<div class="card mx-auto" style="max-width:520px; margin-top:40px;margin-bottom:40px;">

<div class="card-body">
<div class="row">
    <div class="col-md-12">
                <div class="form-group">
                <h4 class="card-title text-center">Xác nhận đặt hàng</h4>
                </div>
        <form asp-action="Payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label" ></label>
                <input asp-for="Code" type="hidden" class="form-control" value="@ViewBag.number" />
                        <p>@ViewBag.number</p>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingAddress" class="control-label"></label>
                <input asp-for="ShippingAddress" class="form-control" value="@ViewBag.address" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShippingPhone" class="control-label"></label>
                <input asp-for="ShippingPhone" class="form-control" value="@ViewBag.phone" />
                <span asp-validation-for="ShippingPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input type="hidden" asp-for="Total" class="form-control" value="@total"/>
                        <h5 class="font-weight-bold">@total.ToString("#,##0") đ </h5>
                <span asp-validation-for="ShippingPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Đặt hàng" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>
</div>
</div>

