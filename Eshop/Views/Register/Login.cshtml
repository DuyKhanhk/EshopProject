@model Account
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-conten padding-y" style="min-height:84vh">
    <!-- ============================ COMPONENT LOGIN   ================================= -->
    <div class="card mx-auto" style="max-width: 380px; margin-top:100px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Đăng nhập</h4>
            <form asp-action="Login">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input class="form-control" placeholder="Tên đăng nhập" type="text" asp-for="Username" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input class="form-control" placeholder="Mật khẩu" type="password" asp-for="Password" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Đăng nhập  </button>
                    <p class="text-danger">@ViewBag.ErrorMsg</p>
                </div> <!-- form-group// -->
            </form>
        </div> <!-- card-body.// -->
    </div> <!-- card .// -->

    <p class="text-center mt-4">Chưa có tài khoản? <a href="@Url.Action("Register", "Register")">Đăng kí</a></p>
    <br><br>
    <!-- ============================ COMPONENT LOGIN  END.// ================================= -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
