@model Eshop.Models.Account

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <h2 class="float-md-left">Thông tin tài khoản</h2>
<a asp-action="Index" asp-controller="Payments" class="btn btn-primary float-md-right" asp-route-id="@Model.Id">Danh sách hóa đơn</a>
</p>
<div class="card mx-auto" style="max-width: 500px; margin-top:50px; margin-bottom:50px">
    <div class="card-body">
        <h4 class="card-title mb-4 font-italic">@ViewBag.Fullname</h4>
        <img class="img-circle" src="~/images/avatar/@Model.Avatar" />
        <dl class="row">
            <dt class="col-sm-6 ">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Username)
            </dd>
     
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>
        </dl>
        <dev>
            <a asp-action="Edit" class="btn btn-primary btn-block" asp-route-id="@Model.Id">Chỉnh sửa</a>
        </dev>
    </div> <!-- card-body.// -->
</div> <!-- card .// -->
    